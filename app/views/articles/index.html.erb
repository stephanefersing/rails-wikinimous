<h1>All articles</h1>

<ul>
<% @articles.each do |article| %>
<h2><%= link_to "#{article.title}", article_path(article)%></h2>
<p><%= article.content %></p>
<%=link_to "Delete #{article.title}",
               article_path(article),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
<% end %>
</ul>

<p><%=link_to "Add an article", new_article_path%></p>

